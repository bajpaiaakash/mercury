<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>MICO_Othr_Designers_and_Developers</submitter>
        <type>group</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Description__c</field>
        <field>Introduction__c</field>
        <field>User_Story__c</field>
        <field>SprintNew__c</field>
        <field>Assigned_To__c</field>
        <field>Test_Execution_Date__c</field>
        <field>Project__c</field>
        <field>Approval_Status__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Update_Approval_Date_Test_Execution</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Approval_Status_Test_Execution</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Updates the Approval Status</description>
        <label>Submit for Approval Test Execution</label>
        <name>Submit_for_Approval_Test_Execution</name>
        <rejectionActions>
            <action>
                <name>Update_Approval_to_Rejected_Test_Exec</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>MICO: This will be used to manage quality and for approval of Test Executions by SMEs: Created on 01/08/2014 by Himanshu Babaria</description>
    <emailTemplate>MICO_Templates/MICO_Test_Execution_Approval_Request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>MICO_Test__c.Approval_Status__c</field>
            <operation>equals</operation>
            <value>Open</value>
        </criteriaItems>
        <criteriaItems>
            <field>MICO_Test__c.Status__c</field>
            <operation>equals</operation>
            <value>Complete</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionRecordLock>true</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Pending_Approval_Test_Execution</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Test Execution Approval Process</label>
    <recallActions>
        <action>
            <name>Approval_Status_to_Open_when_Recalled</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
