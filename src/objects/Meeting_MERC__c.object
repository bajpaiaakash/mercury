<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <enableEnhancedLookup>true</enableEnhancedLookup>
    <validationRules>
        <fullName>MERC_Restrict_Audit_TOV_Status_Changes</fullName>
        <active>true</active>
        <description>Restrict TOV Audit Status changes to prevent jumping through multiple stages.</description>
        <errorConditionFormula>/* Set &apos;Subject to TOV&apos; to make status change*/
(
(Subject_to_ToV_Audit_MERC__c == false) &amp;&amp;
ISCHANGED( ToV_Audit_Status_MERC__c ) &amp;&amp;
NOT(ISPICKVAL(ToV_Audit_Status_MERC__c,&apos;&apos;))
)||
/* From None to Completed*/
(
(Subject_to_ToV_Audit_MERC__c == true) &amp;&amp;
ISCHANGED( ToV_Audit_Status_MERC__c ) &amp;&amp; 
ISPICKVAL(ToV_Audit_Status_MERC__c,&apos;Completed&apos;) &amp;&amp;
ISPICKVAL(PRIORVALUE(ToV_Audit_Status_MERC__c),&apos;&apos;)
)||
/* From Completed to None */
(
(Subject_to_ToV_Audit_MERC__c == true) &amp;&amp;
ISCHANGED( ToV_Audit_Status_MERC__c ) &amp;&amp; 
ISPICKVAL(ToV_Audit_Status_MERC__c,&apos;&apos;) &amp;&amp;
ISPICKVAL(PRIORVALUE(ToV_Audit_Status_MERC__c),&apos;Completed&apos;)
)</errorConditionFormula>
        <errorMessage>NOTE: Please check &apos;Subject to ToV Audit&apos; check box. If checked, please follow the correct Status process (e.g. None - In Process - Completed). You cannot skip ToV Audit Status, if &apos;Subject to TOV Audit&apos; check box is checked.</errorMessage>
    </validationRules>
</CustomObject>
