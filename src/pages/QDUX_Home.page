<apex:page sidebar="false" showHeader="false" >
    <head>
        <title>QDUX Home</title>
    </head>

    <div style="min-width:1200px; width: auto; padding-bottom: 75px;" >
        
        <!-- Header-->
        <c:QDUX_Header ></c:QDUX_Header>
        <!-- End of Header -->
        <c:QDUX_SearchBar ></c:QDUX_SearchBar>
        <!-- End of Search Bar -->
        <br/><br/>
        
        <!-- Widgets -->
        <div style="border: 1px solid; position:relative; border-radius:5px;" >
            <!--<div style="width:35%; min-width:35%; max-width:35%; height: 500px; overflow-y: scroll; display: inline-block; padding-left:1%; ">
                <chatter:newsfeed />
            </div>-->
            
            
            <div style="min-width:61%; max-width:61%; display: inline-block; vertical-align: top; padding-left:1%; ">
                <table width="100%" height="500px" >
                    <td  valign="top" width="50%" height="500px">
                        <c:QDUX_VVMyAlerts ></c:QDUX_VVMyAlerts>
                        
                    </td>
                    
                    <td valign="top">
                        <c:QDUX_ApplicationLinks ></c:QDUX_ApplicationLinks>
                    </td>
                </table> 
            </div>
            
            <div style="width:36%; min-width:36%; max-width:36%; height: 500px; overflow-y: scroll; display: inline-block; padding-left:1%; ">
                <chatter:newsfeed />
            </div>
        </div>
        
        <!-- End of Widgets -->
        
        <!-- Footer -->
        <!--<div style="padding-top:1%;">
            
        </div>
        
        <!-- End of Footer -->
    </div>
    
    <c:QDUX_footer ></c:QDUX_footer>
    
    <!-- Stylesheets and static resources -->
    <apex:stylesheet value="{!$Resource.QDUX_SearchBarCSS}"/>
    <apex:stylesheet value="{!$Resource.QDUX_CSS}"/>
</apex:page>