	Description: Budget versioning page that handles activation/finalisation of budgets.
-->
<apex:page showHeader="true" sidebar="true" standardController="Budget_MERC__c" extensions="MERC_BudgetVersionController">
	<apex:sectionHeader title="{!$ObjectType.Budget_MERC__c.label}" subtitle="{!Budget_MERC__c.Name}" />
	<apex:form >
		<apex:pageBlock title="New Budget Version">
			<apex:pageBlockButtons location="top">
				<apex:commandButton value="{!$Label.New_Budget_Version_New_Version_Button}" action="{!newVersion}"/>
				<apex:commandButton value="{!$Label.Generic_Cancel}" action="{!cancel}"/>
			</apex:pageBlockButtons>
			<apex:pageMessage severity="WARNING" strength="2" summary="{!$Label.New_Budget_Version_New_Version_Message}"/>
		</apex:pageBlock>
	</apex:form>
</apex:page>